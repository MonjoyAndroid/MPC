<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_account_item"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="20dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_account"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:src="@drawable/cifdaq_green"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilroy_medium"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/img_account"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/account_address"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilroy_medium"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/grey"
        android:ellipsize="middle"
        android:maxLines="1"
        android:maxLength="150"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/img_account"
        app:layout_constraintTop_toBottomOf="@+id/account_name"
        android:textStyle="normal"
        tools:ignore="MissingConstraints" />

    <!--    <TextView-->
    <!--        android:id="@+id/coin_amount"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:fontFamily="@font/gilroy_medium"-->
    <!--        android:layout_marginStart="10dp"-->
    <!--        android:text="$3454 USD"-->
    <!--        android:textColor="@color/grey"-->
    <!--        android:textSize="12sp"-->
    <!--        app:layout_constraintStart_toEndOf="@+id/activity_address"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/activity_name"-->
    <!--        android:textStyle="normal" />-->

    <TextView
        android:id="@+id/account_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilroy_medium"
        android:layout_marginBottom="5dp"
        android:text="23322 CIFD"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="normal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/account_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilroy_medium"
        android:text="$3454 USD"
        android:textColor="@color/grey"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_amount"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/grey"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>