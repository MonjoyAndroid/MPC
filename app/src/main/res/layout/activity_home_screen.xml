                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/gilroy_medium"
                        android:text="CIFD Price"
                        android:textColor="@color/grey"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        app:layout_constraintBottom_toTopOf="@+id/txt_cifd_usd_value"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/img_coin" />

                    <TextView
                        android:id="@+id/txt_cifd_usd_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/gilroy_medium"
                        android:text="0.8 USD"
                        android:textColor="@color/base_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_cifd_price" />

                    <TextView
                        android:id="@+id/txt_unlock_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/gilroy_medium"
                        android:text="Unlocked Balance"
                        android:textColor="@color/grey"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        app:layout_constraintBottom_toTopOf="@+id/txt_unlocked_amount"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_cifd_usd_value" />

                    <TextView
                        android:id="@+id/txt_unlocked_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/gilroy_medium"
                        android:text="0.000000 CIFD"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_unlock_balance" />

                    <TextView
                        android:id="@+id/usd_balance_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/gilroy_medium"
                        android:text="$ 0.0000 USD"
                        android:textColor="@color/grey"
                        android:textSize="13sp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_unlocked_amount" />

                    <ImageView
                        android:id="@+id/img_refresh"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/icon_refresh"
                        android:padding="7dp"
                        android:textStyle="normal"
                        app:layout_constraintBottom_toBottomOf="@+id/usd_balance_amount"
                        app:layout_constraintStart_toEndOf="@+id/usd_balance_amount"
                        app:layout_constraintTop_toBottomOf="@+id/txt_unlocked_amount" />

